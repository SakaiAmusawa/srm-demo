    <select id="selectSrmSourcingMaterialDetailList" resultType="SrmSourcingMaterialDetail"
            resultMap="SrmSourcingMaterialDetailResult">
        select id,
               material_name,
               material_code,
               category_name,
               unit,
               reference_price,
               requirement_number,
               estimated_unit_price,
               tax_code,
               tax_rate,
