<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.srm.system.mapper.SrmSupplierContactInformationMapper">
    
    <resultMap type="SrmSupplierContactInformation" id="SrmSupplierContactInformationResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="gender"    column="gender"    />
        <result property="email"    column="email"    />
        <result property="phone"    column="phone"    />
        <result property="department"    column="department"    />
        <result property="telephone"    column="telephone"    />
        <result property="documentType"    column="document_type"    />
        <result property="documentCode"    column="document_code"    />
        <result property="remarks"    column="remarks"    />
        <result property="supplierId"    column="supplier_id"    />
    </resultMap>

    <sql id="selectSrmSupplierContactInformationVo">
        select id, name, gender, email, phone, department, telephone, document_type, document_code, remarks, supplier_id from srm_supplier_contact_information
    </sql>

    <select id="selectSrmSupplierContactInformationList" parameterType="SrmSupplierContactInformation" resultMap="SrmSupplierContactInformationResult">
        <include refid="selectSrmSupplierContactInformationVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="gender != null "> and gender = #{gender}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="department != null  and department != ''"> and department = #{department}</if>
            <if test="telephone != null  and telephone != ''"> and telephone = #{telephone}</if>
            <if test="documentType != null  and documentType != ''"> and document_type = #{documentType}</if>
            <if test="documentCode != null  and documentCode != ''"> and document_code = #{documentCode}</if>
            <if test="remarks != null  and remarks != ''"> and remarks = #{remarks}</if>
            <if test="supplierId != null "> and supplier_id = #{supplierId}</if>
        </where>
    </select>
    
    <select id="selectSrmSupplierContactInformationById" parameterType="Long" resultMap="SrmSupplierContactInformationResult">
        <include refid="selectSrmSupplierContactInformationVo"/>
        where id = #{id}
    </select>

    <insert id="insertSrmSupplierContactInformation" parameterType="SrmSupplierContactInformation" useGeneratedKeys="true" keyProperty="id">
        insert into srm_supplier_contact_information
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="gender != null">gender,</if>
            <if test="email != null and email != ''">email,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="department != null and department != ''">department,</if>
            <if test="telephone != null">telephone,</if>
            <if test="documentType != null">document_type,</if>
            <if test="documentCode != null and documentCode != ''">document_code,</if>
            <if test="remarks != null">remarks,</if>
            <if test="supplierId != null">supplier_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="gender != null">#{gender},</if>
            <if test="email != null and email != ''">#{email},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="department != null and department != ''">#{department},</if>
            <if test="telephone != null">#{telephone},</if>
            <if test="documentType != null">#{documentType},</if>
            <if test="documentCode != null and documentCode != ''">#{documentCode},</if>
            <if test="remarks != null">#{remarks},</if>
            <if test="supplierId != null">#{supplierId},</if>
         </trim>
    </insert>

    <update id="updateSrmSupplierContactInformation" parameterType="SrmSupplierContactInformation">
        update srm_supplier_contact_information
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="email != null and email != ''">email = #{email},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="department != null and department != ''">department = #{department},</if>
            <if test="telephone != null">telephone = #{telephone},</if>
            <if test="documentType != null">document_type = #{documentType},</if>
            <if test="documentCode != null and documentCode != ''">document_code = #{documentCode},</if>
            <if test="remarks != null">remarks = #{remarks},</if>
            <if test="supplierId != null">supplier_id = #{supplierId},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSrmSupplierContactInformationById" parameterType="Long">
        delete from srm_supplier_contact_information where id = #{id}
    </delete>

    <delete id="deleteSrmSupplierContactInformationByIds" parameterType="String">
        delete from srm_supplier_contact_information where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>